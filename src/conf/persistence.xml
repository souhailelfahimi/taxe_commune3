<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="projet_java_taxPU" transaction-type="JTA">
    <jta-data-source>java:app/taxe_commune1</jta-data-source>
    <class>bean.AnnexeAdministratif</class>
    <class>bean.Categorie</class>
    <class>bean.Locale</class>
    <class>bean.Quartier</class>
    <class>bean.Redevable</class>
    <class>bean.Rue</class>
    <class>bean.Secteur</class>
    <class>bean.TauxTaxe</class>
    <class>bean.TauxTaxeRetard</class>
    <class>bean.TaxeAnnuel</class>
    <class>bean.TaxeTrim</class>
    <class>bean.User</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
